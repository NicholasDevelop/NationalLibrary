@model NationalLibrary.FinalViews.BookFinalView

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/newBook.css">
    <title>Document</title>
</head>
<body>

    <main>
        <div class="title-container">
            <h1 class="newbook-title">Aggiungi un nuovo libro</h1>
        </div>

        <div class="container">
            <div class="sub-container">
                <form class="form-book" action="" method="post">
                    <div class="label-container">
                        <!-- Titolo -->
                        <label class="custom-field">
                            <input type="text" placeholder=" " asp-for="@Model.Title" />
                            <span class="placeholder">Titolo</span>
                        </label>
                        <!-- Autore -->
                        <label class="custom-field">
                            <input type="text" placeholder=" " asp-for="@Model.Author" />
                            <span class="placeholder">Autore</span>
                        </label>                        
                    </div>

                    <div class="label-container">
                        <!-- ISBN -->
                        <label class="custom-field">
                            <input type="text" placeholder=" " />
                            <span class="placeholder">ISBN</span>
                        </label>
                        <!-- Casa Editrice -->
                        <label class="custom-field">
                            <input type="text" placeholder=" " asp-for="@Model.PublishingHouse" />
                            <span class="placeholder">Casa Editrice</span>
                        </label>
                    </div>


                    <div class="label-container">
                        <!-- Reparto -->
                        <label class="custom-field">
                            <input type="text" placeholder=" " asp-for="@Model.Room" />
                            <span class="placeholder">Reparto</span>
                        </label>
                        <!-- Scaffale -->
                        <label class="custom-field">
                            <input type="text" placeholder=" " asp-for="@Model.Scaffhold" />
                            <span class="placeholder">Scaffale</span>
                        </label>
                    </div>

                    <div class="label-container">
                        <!-- Ripiano -->
                        <label class="custom-field">
                            <input type="text" placeholder=" " asp-for="@Model.Shelf" />
                            <span class="placeholder">Ripiano N.</span>
                        </label>
                        <!-- Posizione -->
                        <label class="custom-field">
                            <input type="text" placeholder=" " asp-for="@Model.Position" />
                            <span class="placeholder">Posizione N.</span>
                        </label>
                    </div>

                    <div class="label-container">
                        <!-- Genere -->
                        <label class="custom-field">
                            <input type="text" placeholder=" " asp-for="@Model.Genre" />
                            <span class="placeholder">Genere</span>
                        </label>
                        <!-- Prezzo -->
                        <label class="custom-field">
                            <input type="text" placeholder=" " asp-for="@Model.Price" />
                            <span class="placeholder">Genere</span>
                        </label>
                    </div>

                    <!-- Trama -->
                    <textarea style="width: 100%; margin-top: 10px; border-radius: 3px; padding: 10px; background-color: transparent; border: 2px solid #ddd;" rows="4" placeholder="Inserisci la trama del libro..." asp-for="@Model.Presentation"></textarea>

                    <!-- Immagine di copertina -->
                    <label for="" class="label-file">Scegli l'immagine di cover:</label>
                    <input type="file" class="input-file" asp-for="@Model.CoverImg">

                    @*<div class="label-container">
                        <!-- Copie in possesso -->
                        <label class="custom-field">
                            <input type="text" placeholder=" "/>
                            <span class="placeholder">Copie in possesso</span>
                        </label>
                    </div>*@

                    <div class="button-container">
                        <Button class="special-button red" type="submit" name="submitEmployee">Torna Indietro</Button>
                        <Button class="special-button" type="submit" name="submitEmployee">Aggiungi</Button>
                    </div>
                </form>
            </div>
        </div>
    </main>
</body>